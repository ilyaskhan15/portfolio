# Production Environment Variables for Heroku

# Security
SECRET_KEY=your-secret-key-here-generate-new-one-for-production
DEBUG=False

# Database (PostgreSQL on Heroku)
DATABASE_URL=postgres://username:password@hostname:port/database_name

# Allowed Hosts (Update with your Heroku app URL and custom domain)
ALLOWED_HOSTS=your-app-name.herokuapp.com,yourdomain.com,www.yourdomain.com

# Email Configuration (Optional - for contact forms and notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default Email Addresses
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SERVER_EMAIL=admin@your-domain.com

# CORS Settings (Update with your frontend URLs)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Django Settings Module
DJANGO_SETTINGS_MODULE=portfolio_blog.settings.production

# Logging Level
DJANGO_LOG_LEVEL=INFO

# Static Files (automatically handled by WhiteNoise)
STATIC_URL=/static/
MEDIA_URL=/media/

# Optional: Sentry for Error Tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: AWS S3 for Media Files (if using S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Optional: Redis for Caching (if using Redis)
# REDIS_URL=redis://localhost:6379/1